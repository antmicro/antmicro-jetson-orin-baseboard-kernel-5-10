/ {
	// NVCSI configuration
	host1x@13e00000 {
		nvcsi@15a00000 {
			num-channels = <4>;
			#address-cells = <1>;
			#size-cells = <0>;
			channel@0 {
				reg = <0>;
				ports {
					#address-cells = <1>;
					#size-cells = <0>;
					port@0 {
						reg = <0>;
						avt_csi2_csi_in0: endpoint@0 {
							port-index = <0>;
							bus-width = <2>;
							remote-endpoint = <&avt_csi2_out0>;
						};
					};
					port@1 {
						reg = <1>;
						avt_csi2_csi_out0: endpoint@1 {
							remote-endpoint = <&avt_csi2_vi_in0>;
						};
					};
				};
			};
			channel@1 {
				reg = <1>;
				ports {
					#address-cells = <1>;
					#size-cells = <0>;
					port@0 {
						reg = <0>;
						avt_csi2_csi_in1: endpoint@0 {
							port-index = <2>;
							bus-width = <2>;
							remote-endpoint = <&avt_csi2_csi_in1>;
						};
					};
					port@1 {
						reg = <1>;
						avt_csi2_csi_out2: endpoint@1 {
							remote-endpoint = <&avt_csi2_vi_in2>;
						};
					};
				};
			};
			channel@2 {
				reg = <2>;
				ports {
					#address-cells = <1>;
					#size-cells = <0>;
					port@0 {
						reg = <0>;
						avt_csi2_csi_in2: endpoint@0 {
							port-index = <1>;
							bus-width = <2>;
							remote-endpoint = <&avt_csi2_out2>;
						};
					};
					port@1 {
						reg = <1>;
						avt_csi2_csi_out1: endpoint@1 {
							remote-endpoint = <&avt_csi2_vi_in1>;
						};
					};
				};
			};
			channel@3 {
				reg = <3>;
				ports {
					#address-cells = <1>;
					#size-cells = <0>;
					port@0 {
						reg = <0>;
						avt_csi2_csi_in3: endpoint@0 {
							port-index = <3>;
							bus-width = <2>;
							remote-endpoint = <&avt_csi2_out3>;
						};
					};
					port@1 {
						reg = <1>;
						avt_csi2_csi_out3: endpoint@1 {
							remote-endpoint = <&avt_csi2_vi_in3>;
						};
					};
				};
			};
		};
	};

	// VI configuration
	tegra-capture-vi {
		num-channels = <4>;
		ports {
			#address-cells = <1>;
			#size-cells = <0>;
			port@0 {
				reg = <0>;
				avt_csi2_vi_in0: endpoint {
					port-index = <0>;
					bus-width = <2>;
					remote-endpoint = <&avt_csi2_csi_out0>;
				};
			};
			port@1 {
				reg = <1>;
				avt_csi2_vi_in2: endpoint {
					port-index = <2>;
					bus-width = <2>;
					remote-endpoint = <&avt_csi2_csi_out2>;
				};
			};
			port@2 {
				reg = <2>;
				avt_csi2_vi_in1: endpoint {
					port-index = <1>;
					bus-width = <2>;
					remote-endpoint = <&avt_csi2_csi_out1>;
				};
			};
			port@3 {
				reg = <3>;
				avt_csi2_vi_in3: endpoint {
					port-index = <3>;
					bus-width = <2>;
					remote-endpoint = <&avt_csi2_csi_out3>;
				};
			};
		};
	};
	
	// Although our configuration is only made to support V4L2, this node is still required since
	// NVCSI/VI drivers rely on some timing computations done by TCP driver
	tcp: tegra-camera-platform {
		compatible = "nvidia, tegra-camera-platform";
		status = "okay";
		/**
		* Physical settings to calculate max ISO BW
		*
		* num_csi_lanes = <>;
		* Total number of CSI lanes when all cameras are active
		*
		* max_lane_speed = <>;
		* Max lane speed in Kbit/s
		*
		* min_bits_per_pixel = <>;
		* Min bits per pixel
		*
		* vi_peak_byte_per_pixel = <>;
		* Max byte per pixel for the VI ISO case
		*
		* vi_bw_margin_pct = <>;
		* Vi bandwidth margin in percentage
		*
		* max_pixel_rate = <>;
		* Max pixel rate in Kpixel/s for the ISP ISO case
		*
		* isp_peak_byte_per_pixel = <>;
		* Max byte per pixel for the ISP ISO case
		*
		* isp_bw_margin_pct = <>;
		* Isp bandwidth margin in percentage
		*/
		num_csi_lanes = <8>;
		max_lane_speed = <1500000>;
		min_bits_per_pixel = <10>;
		vi_peak_byte_per_pixel = <2>;
		vi_bw_margin_pct = <25>;
		max_pixel_rate = <240000>;
		isp_peak_byte_per_pixel = <5>;
		isp_bw_margin_pct = <25>;
	};
};
